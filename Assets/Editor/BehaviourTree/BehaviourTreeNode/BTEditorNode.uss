VisualElement {
    font-size: 14px;
}

#input-port {
    align-items: center;
    justify-content: flex-end;
}

#output-port {
    align-items: center;
    justify-content: center;
}

.--bt-node-main {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    width: auto;
    min-width: auto;
    max-width: none;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 10px;
    padding-bottom: 10px;
    background-color: rgba(33, 35, 37, 255);
}

.--bt-node-main-warning {
    background-color: rgba(70, 15, 16, 255);
}

.--bt-node-main-selected {
    border-left-color: rgba(57, 255, 239, 255);
    border-right-color: rgba(57, 255, 239, 255);
    border-top-color: rgba(57, 255, 239, 255);
    border-bottom-color: rgba(57, 255, 239, 255);
}

.--bt-node-input-field {
    border-radius: 4px;
    max-width: 240px;
    min-width: 160px;
    padding: 8px;
    -unity-text-align: upper-left;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    min-height: 30px;
    align-items: center;
    background-color: rgb(91, 91, 91);
}

.--bt-node-input-field > .unity-text-field__input {
    background-color: transparent;
    border-color: transparent;
    min-width: 160px;
    min-height: 30px;
    max-width: 240px;
    padding-left: 8px;
}

.--bt-node-input-field > .unity-text-field__input:focus {
    background-color: rgb(29, 29, 30);
    border-color: rgb(39, 41, 44);
    min-width: 160px;
    min-height: 30px;
    max-width: 240px;
    padding-left: 8px;
}

.--bt-node-padding {
    padding-left: 8px;
}
